{
    "compilerOptions": {
        "target": "es5",
        "lib": ["esnext"],
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "./dist"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
